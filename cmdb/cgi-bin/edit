  end
  puts "<td align=right><b>Bridge:</b></td>"
  puts "<td><input type='text' size='10' name='nic2_ifcfgbridge' value='"+nic2_entry['ifcfgbridge'].to_s+"'></td>"
  puts "<td align=right><b>Master:</b></td>"
  puts "<td><input type='text' size='5' name='nic2_ifcfgmaster' value='"+nic2_entry['ifcfgmaster'].to_s+"'></td>"

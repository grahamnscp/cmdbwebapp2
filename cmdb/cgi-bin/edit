  else
    puts "    <td><input type='checkbox' name='nic1_ifcfguserctl' value='"+nic1_entry['ifcfguserctl'].to_s+"'></td>"
  end
  puts "<td align=right><b>IPv6:</b></td>"
  if nic1_entry['ifcfgipv6init'].to_s == "TRUE" then

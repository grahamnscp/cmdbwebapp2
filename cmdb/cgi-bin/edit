    if fval.strip == nic5_entry['cn'].to_s then
      puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
    else
      puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
    end

  puts "</tr>"

  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>EthTool Opts:</b></td>"
  puts "<td><input type='text' size='10' name='nic12_ifcfgethtoolopts' value='"+nic12_entry['ifcfgethtoolopts'].to_s+"'></td>"
  puts "<td align=right><b>Bonding Opts:</b></td>"
  puts "<td><input type='text' size='10' name='nic12_ifcfgbondingopts' value='"+nic12_entry['ifcfgbondingopts'].to_s+"'></td>"
  puts "<td align=right><b>UserCtrl:</b></td>"
  if nic12_entry['ifcfguserctl'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic12_ifcfguserctl' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic12_ifcfguserctl' value='"+nic12_entry['ifcfguserctl'].to_s+"'></td>"
  end
  puts "<td align=right><b>IPv6:</b></td>"
  if nic12_entry['ifcfgipv6init'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic12_ifcfgipv6init' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic12_ifcfgipv6init' value='"+nic12_entry['ifcfgipv6init'].to_s+"'></td>"
  end
  puts "</tr>"

  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>Description:</b></td>"
  puts "<td colspan=3><input type='text' size='50' name='nic12_description' value='"+nic12_entry['description'].to_s+"'></td>"
  puts "</tr>"
else
  puts "<td>&nbsp;</td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>"
  puts "<tr>"
  puts "<td align=left><b>12)&nbsp;&nbsp;</b></td>"
  puts "<td><select name='nic12_cn'>"
  puts "    <option value='--' selected='selected'>--</option>"
  File.open($lov_niccn).readlines.each do |fval|
    puts "  <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
  puts "   </select></td>"
  puts "<td align=right><b>* IP Address:</b></td><td><input type='text' size='16' name='nic12_ifcfgipaddress'></td>"
  puts "<td align=right><b>* Netmask:</b></td><td><input type='text' size='16' name='nic12_ifcfgnetmask' value='255.255.255.0'></td>"
  puts "<td align=right><b>* Gateway:</b></td><td><input type='text' size='16' name='nic12_ifcfggateway'></td>"
  puts "<td align=right><b>* onBoot:</b></td><td><input type='checkbox' name='nic12_ifcfgonboot' value='TRUE' checked></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>* IF Type:</b></td><td><input type='text' size='10' name='nic12_ifcfgtype' value='Ethernet'></td>"
  puts "<td align=right><b>mac Address:</b></td><td><input type='text' size='17' name='nic12_ifcfghwaddr'></td>"
  puts "<td align=right><b>Boot Proto:</b></td><td><input type='text' size='8' name='nic12_ifcfgbootproto'></td>"
  puts "<td align=right><b>pxeBoot:</b></td><td><input type='checkbox' name='nic12_pxeboot' value='FALSE'></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>vLAN:</b></td><td><input type='checkbox' name='nic12_ifcfgvlan' value='FALSE'></td>"
  puts "<td align=right><b>Bridge:</b></td><td><input type='text' size='10' name='nic12_ifcfgbridge'></td>"
  puts "<td align=right><b>Master:</b></td><td><input type='text' size='10' name='nic12_ifcfgmaster'></td>"
  puts "<td align=right><b>Slave:</b></td><td><input type='checkbox' name='nic12_ifcfgslave' value='FALSE'></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>ethToolOpts:</b></td><td><input type='text' size='10' name='nic12_ethToolOptions'></td>"
  puts "<td align=right><b>Bonding Opts:</b></td><td><input type='text' size='10' name='nic12_ifcfgbondingopts'></td>"
  puts "<td align=right><b>UserCtrl:</b></td><td><input type='checkbox' name='nic12_ifcfguserctl' value='FALSE'></td>"
  puts "<td align=right><b>IPv6:</b></td><td><input type='checkbox' name='nic12_ifcfgipv6init' value='FALSE'></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>Description:</b></td><td colspan=3><input type='text' size='50' name='nic12_description'></td>"
  puts "</tr>"
end

puts "</table>"
  
  
puts "  <br><input type='submit' value='Update Entry'>"
puts "</form>"


puts "<font size=+1><a href='/cmdb/list'>Home</a></font>"

output_page_footer

exit 0


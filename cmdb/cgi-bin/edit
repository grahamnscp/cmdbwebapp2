#!/usr/bin/ruby

# Includes
require 'helper.rb'
require 'helper-satapi.rb'


# 
# Main
#
#
BEGIN { $VERBOSE = nil }

output_page_header

cgi = CGI.new
params = cgi.params # hash with field-names and values

fqdn = params['fqdn'].to_s if params.has_key?"fqdn"

read_from_cmdb=true
managedserver = Hash.new
disk1_entry = Hash.new
disk2_entry = Hash.new
nic1_entry = Hash.new
nic2_entry = Hash.new
nic3_entry = Hash.new
nic4_entry = Hash.new
nic6_entry = Hash.new
nic6_entry = Hash.new
nic7_entry = Hash.new
nic8_entry = Hash.new
nic9_entry = Hash.new
nic10_entry = Hash.new
nic11_entry = Hash.new
nic12_entry = Hash.new

puts "<h1>System Edit: " + fqdn + "</h1>"

# Read system from CMDB:
managedserver = read_server_by_fqdn(fqdn)

if managedserver.to_s.empty? then
  puts "<br>"
  puts "<font size='+1' color=red>Something went wrong, server ("+ fqdn +") not found in CMDB</font><br><br>"
  puts "<form><input type='button' value='Go Back' onclick='history.go(-1);return true;'></form>"
  exit 1
end

# Break out the dn for children lookups
dn = managedserver['dn'].to_s

# Enhancement, read number of disks incase there is more than one and handle in loop, same for nic > 2
disk1_entry = read_disk_by_dn(dn,"1")
disk2_entry = read_disk_by_dn(dn,"2")

nic1_entry = read_nic_by_dn(dn, "1")
nic2_entry = read_nic_by_dn(dn, "2")
nic3_entry = read_nic_by_dn(dn, "3")
nic4_entry = read_nic_by_dn(dn, "4")
nic5_entry = read_nic_by_dn(dn, "5")
nic6_entry = read_nic_by_dn(dn, "6")
nic7_entry = read_nic_by_dn(dn, "7")
nic8_entry = read_nic_by_dn(dn, "8")
nic9_entry = read_nic_by_dn(dn, "9")
nic10_entry = read_nic_by_dn(dn, "10")
nic11_entry = read_nic_by_dn(dn, "11")
nic12_entry = read_nic_by_dn(dn, "12")

puts "<form Method='POST' action= '/cmdb/show'>"

puts "  <p><input type='hidden' name='posted' value='edit'>"

puts "<table>"

puts "<tr>"
puts "<td align=right><b>* Hostname:</b></td><td>"+managedserver['hostname'].to_s+"</td>"
puts "  <p><input type='hidden' name='cn' value='"+managedserver['cn'].to_s+"'>"
puts "  <p><input type='hidden' name='hostname' value='"+managedserver['hostname'].to_s+"'>"
puts "<td align=right><b>Description:</b></td>"
puts "<td><input type='text' size='50' name='description' value='"+managedserver['description'].to_s+"'><br></td>"
puts "</tr>"


puts "<tr>"
#location
puts "<td align=right><b>Location:</b></td><td><select name='location'>"
File.open($lov_location).readlines.each do |fval|
  if fval.strip == managedserver['location'].to_s then
    puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>Owner:</b></td>"
puts "<td><input type='text' size='15' name='serverOwner' value='"+managedserver['serverOwner'].to_s+"'><br></td>"
puts "</tr>"

puts "<tr>"
#environment
puts "<td align=right><b>Environment:</b></td><td><select name='environment'>"
File.open($lov_environment).readlines.each do |fval|
  if fval.strip == managedserver['environment'].to_s then
    puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td>&nbsp;</td><td>&nbsp;<br></td>"
puts "  <p><input type='hidden' name='uptime' value='"+managedserver['uptime'].to_s+"'>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>* OS Type:</b></td><td><select name='operatingSystem'>"
File.open($lov_operatingsystem).readlines.each do |fval|
  if fval.strip == managedserver['operatingSystem'].to_s then
    puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>LOM IP:</b></td>"
puts "<td><input type='text' size='16' name='lom' value='"+managedserver['lom'].to_s+"'><br></td>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>* OS Version:</b></td><td><select name='osVersion'>"
File.open($lov_osversion).readlines.each do |fval|
  if fval.strip == managedserver['osVersion'].to_s then
    puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>Audit Profile:</b></td>"
puts "<td><input type='text' size='15' name='auditprofile' value='"+managedserver['auditprofile'].to_s+"'><br></td>"
puts "</tr>"


puts "<tr>"
puts "<td align=right><b>Manufacturer:</b></td>"
puts "<td><input type='text' size='15' name='manufacturer' value='"+managedserver['manufacturer'].to_s+"'><br></td>"
puts "<td align=right><b>SNMP Mgr:</b></td>"
puts "<td><input type='text' size='15' name='snmpmanager' value='"+managedserver['snmpmanager'].to_s+"'><br></td>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>Model:</b></td>"
puts "<td><input type='text' size='15' name='model' value='"+managedserver['model'].to_s+"'><br></td>"
puts "<td align=right><b>IDM Mgr:</b></td>"
puts "<td><input type='text' size='15' name='idmmanager' value='"+managedserver['idmmanager'].to_s+"'><br></td>"
puts "</tr>"


puts "<tr>"
puts "<td align=right><b>Sockets:</b></td>"
puts "<td><input type='text' size='2' name='sockets' value='"+managedserver['sockets'].to_s+"'><br></td>"
puts "<td>&nbsp;</td><td>&nbsp;<br></td>"
puts "  <p><input type='hidden' name='puppetstatus' value='"+managedserver['puppetstatus'].to_s+"'>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>Cores:</b></td>"
puts "<td><input type='text' size='2' name='cores' value='"+managedserver['cores'].to_s+"'><br></td>"
puts "<td>&nbsp;</td><td>&nbsp;<br></td>"
puts "  <p><input type='hidden' name='puppetlastrundate' value='"+managedserver['puppetlastrundate'].to_s+"'>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>Memory:</b></td><td>"
puts "  <input type='text' size='15' name='memory' value='"+managedserver['memory'].to_s+"'><br></td>"
puts "<td align=right><b>* serverRoles:</b></td><td><select name='serverRole' size='10' multiple>"
# Read Server Roles from CMDB
serverroles = read_server_roles
serverroles.each do |srole|
  if managedserver['serverRole'].include? srole.strip
    puts "    <option selected='selected'>"+srole.strip+"</option>"
  else
    puts "    <option>"+srole.strip+"</option>"
  end
end
puts "</select></td>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>* cobblerProfile:</b></td><td><select name='cobblerProfile'>"
# Read from Satellite API
kickstarts = read_kickstarts
kickstarts.sort.reverse.each do |ksval|
  if ksval.strip == managedserver['cobblerProfile'].to_s then
    puts "    <option value='"+ksval.strip+"' selected='selected'>"+ksval.strip+"</option>"
  else
    puts "    <option value='"+ksval.strip+"'>"+ksval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>* rhnBaseChannel:</b></td><td>"
puts "  <select name='rhnBaseChannel'>"
# Read from Satellite API
channels = read_base_channels
channels.sort.reverse.each do |cval|
  if cval.strip == managedserver['rhnBaseChannel'].to_s then
    puts "    <option value='"+cval.strip+"' selected='selected'>"+cval.strip+"</option>"
  else
    puts "    <option value='"+cval.strip+"'>"+cval.strip+"</option>"
  end
end
puts "</select></td>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>* rhnActivationKey:</b></td><td><select name='rhnActivationKey' size='6' multiple>"
# Read from Satellite API
akeys = read_activationkeys
akeys.each do |kval|
  if managedserver['rhnActivationKey'].include? kval.strip
    puts "    <option selected='selected'>"+kval.strip+"</option>"
  else
    puts "    <option>"+kval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>rhnChildChannels:</b></td><td><select name='rhnChildChannel' size='6' multiple>"
# Read from Satellite API
channels = read_child_channels
channels.each do |cval|
  if managedserver['rhnChildChannel'].include? cval.strip
    puts "    <option selected='selected'>"+cval.strip+"</option>"
  else
    puts "    <option>"+cval.strip+"</option>"
  end
end
puts "</select></td>"
puts "</tr>"

puts "<tr>"
puts "<td align=right><b>Name Servers:</b></td><td>"
puts "  <select name='nameServer' size='2' multiple>"
File.open($lov_nameserver).readlines.each do |fval|
  if managedserver['nameServer'].include? fval.strip
    puts "    <option selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "<td align=right><b>Time Servers:</b></td><td><select name='timeServer' size='2' multiple>"
File.open($lov_timeserver).readlines.each do |fval|
  if managedserver['timeServer'].include? fval.strip
    puts "    <option selected='selected'>"+fval.strip+"</option>"
  else
    puts "    <option>"+fval.strip+"</option>"
  end
end
puts "</select></td>"
puts "</tr>"

puts "<table>"


puts "<br><font size='+1'><b>Disks:</b></font>"

puts "<table>"

#disk1
# Check if disk is present
if disk1_entry.to_a.any? then
  puts "<tr>"
  puts "<td align=left><b>1)&nbsp;&nbsp;</b></td>"
  puts "<td>"+disk1_entry['cn'].to_s+" :</td>"

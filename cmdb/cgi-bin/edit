  puts "<td><input type='text' size='17' name='nic2_ifcfghwaddr' value='"+nic2_entry['ifcfghwaddr'].to_s+"'></td>"
  puts "<td align=right><b>Boot Proto:</b></td>"
  puts "<td><input type='text' size='10' name='nic2_ifcfgbootproto' value='"+nic2_entry['ifcfgbootproto'].to_s+"'></td>"

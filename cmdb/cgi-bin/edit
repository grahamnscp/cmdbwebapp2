  puts "<td align=right><b>* Gateway:</b></td><td><input type='text' size='16' name='nic1_ifcfggateway'></td>"
  puts "<td align=right><b>* onBoot:</b></td><td><input type='checkbox' name='nic1_ifcfgonboot' value='TRUE' checked></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>* IF Type:</b></td><td><input type='text' size='10' name='nic1_ifcfgtype' value='Ethernet'></td>"
  puts "<td align=right><b>mac Address:</b></td><td><input type='text' size='17' name='nic1_ifcfghwaddr'></td>"
  puts "<td align=right><b>Boot Proto:</b></td><td><input type='text' size='8' name='nic1_ifcfgbootproto'></td>"
  puts "<td align=right><b>pxeBoot:</b></td><td><input type='checkbox' name='nic1_pxeboot' value='TRUE' checked></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>vLAN:</b></td><td><input type='checkbox' name='nic1_ifcfgvlan' value='FALSE' checked></td>"
  puts "<td align=right><b>Bridge:</b></td><td><input type='text' size='10' name='nic1_ifcfgbridge'></td>"
  puts "<td align=right><b>Master:</b></td><td><input type='text' size='10' name='nic1_ifcfgmaster'></td>"
  puts "<td align=right><b>Slave:</b></td><td><input type='checkbox' name='nic1_ifcfgslave' value='FALSE' checked></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>ethToolOpts:</b></td><td><input type='text' size='10' name='nic1_ifcfgethtoolopts'></td>"
  puts "<td align=right><b>Bonding Opts:</b></td><td><input type='text' size='10' name='nic1_ifcfgbondingopts'></td>"
  puts "<td align=right><b>UserCtrl:</b></td><td><input type='checkbox' name='nic1_ifcfguserctl' value='FALSE'></td>"
  puts "<td align=right><b>IPv6:</b></td><td><input type='checkbox' name='nic1_ifcfgipv6init' value='FALSE'></td>"
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>Description:</b></td><td colspan=3><input type='text' size='50' name='nic1_description'></td>"
  puts "</tr>"
end


#nic2
if nic2_entry.to_a.any? then
  puts "<td>&nbsp;</td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>"
  puts "<tr>"
  puts "<td align=left><b>2)&nbsp;&nbsp;</b></td>"
  puts "<td><select name='nic2_cn'>"
  File.open($lov_niccn).readlines.each do |fval|
    if fval.strip == nic2_entry['cn'].to_s then
      puts "    <option value='"+fval.strip+"' selected='selected'>"+fval.strip+"</option>"
    else
      puts "    <option value='"+fval.strip+"'>"+fval.strip+"</option>"
    end
  end
  puts "</select></td>"
  puts "<td align=right><b>* IP Address:</b></td>"
  puts "<td><input type='text' size='16' name='nic2_ifcfgipaddress' value='"+nic2_entry['ifcfgipaddress'].to_s+"'></td>"
  puts "<td align=right><b>* Netmask:</b></td>"
  puts "<td><input type='text' size='16' name='nic2_ifcfgnetmask' value='"+nic2_entry['ifcfgnetmask'].to_s+"'></td>"
  puts "<td align=right><b>Gateway:</b></td>"
  puts "<td><input type='text' size='16' name='nic2_ifcfggateway' value='"+nic2_entry['ifcfggateway'].to_s+"'></td>"
  puts "<td align=right><b>* onBoot:</b></td>"
  if nic2_entry['ifcfgOnboot'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic2_ifcfgonboot' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic2_ifcfgonboot' value='"+nic2_entry['ifcfgonboot'].to_s+"'></td>"
  end
  puts "</tr>"
  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>* IF Type:</b></td>"
  puts "<td><input type='text' size='10' name='nic2_ifcfgtype' value='"+nic2_entry['ifcfgtype'].to_s+"'></td>"

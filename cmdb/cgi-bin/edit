  puts "<td align=right><b>* Size (GB):</b></td>"
  puts "<td><input type='text' size='3' name='disk1_size' value='"+disk1_entry['size'].to_s+"'></td>"
  puts "<td align=right><b>* Device Alias:</b></td>"
  puts "<td><input type='text' size='15' name='disk1_deviceAlias' value='"+disk1_entry['deviceAlias'].to_s+"'></td>"
  puts "<td align=right><b>* Interface:</b></td>"
  puts "<td><input type='text' size='8' name='disk1_deviceInterface' value='"+disk1_entry['deviceInterface'].to_s+"'></td>"
  puts "<td align=right><b>Description:</b></td>"
  puts "<td><input type='text' size='30' name='disk1_description' value='"+disk1_entry['description'].to_s+"'></td>"
  puts "</tr>"
else
  puts "<tr>"
  puts "<td align=left><b>1)&nbsp;&nbsp;</b></td>"
  puts "<td><select name='disk1_cn'>"
  puts "    <option value='--' selected='selected'>--</option>"
  File.open($lov_diskcn).readlines.each do |fval|
    puts "  <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
  puts "</select></td>"
  puts "<td align=right><b>* Size (GB):</b></td><td><input type='text' size='3' name='disk1_size'></td>"
  puts "<td align=right><b>* Device Alias:</b></td><td><input type='text' size='15' name='disk1_deviceAlias'></td>"
  puts "<td align=right><b>* Interface:</b></td><td><input type='text' size='8' name='disk1_deviceInterface'></td>"
  puts "<td align=right><b>Description:</b></td><td><input type='text' size='30' name='disk1_description'></td>"
  puts "</tr>"
end

#disk2
# Check if disk is present
if disk2_entry.to_a.any? then
  puts "<tr><td>&nbsp;</td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>"
  puts "<tr>"
  puts "<td align=left><b>2)&nbsp;&nbsp;</b></td>"
  puts "<td>"+disk2_entry['cn'].to_s+" :</td>"
  puts "<p><input type='hidden' name='disk2_cn' value='"+disk2_entry['cn'].to_s+"'>"
  puts "<td align=right><b>* Size (GB):</b></td>"
  puts "<td><input type='text' size='3' name='disk2_size' value='"+disk2_entry['size'].to_s+"'></td>"
  puts "<td align=right><b>* Device Alias:</b></td>"
  puts "<td><input type='text' size='15' name='disk2_deviceAlias' value='"+disk2_entry['deviceAlias'].to_s+"'></td>"
  puts "<td align=right><b>* Interface:</b></td>"
  puts "<td><input type='text' size='8' name='disk2_deviceInterface' value='"+disk2_entry['deviceInterface'].to_s+"'></td>"
  puts "<td align=right><b>Description:</b></td>"
  puts "<td><input type='text' size='30' name='disk2_description' value='"+disk2_entry['description'].to_s+"'></td>"
  puts "</tr>"
else
  puts "<tr><td>&nbsp;</td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>"
  puts "<tr>"
  puts "<td align=left><b>2)&nbsp;&nbsp;</b></td>"
  puts "<td><select name='disk2_cn'>"
  puts "    <option value='--' selected='selected'>--</option>"
  File.open($lov_diskcn).readlines.each do |fval|
    puts "  <option value='"+fval.strip+"'>"+fval.strip+"</option>"
  end
  puts "   </select></td>"
  puts "<td align=right><b>* Size (GB):</b></td><td><input type='text' size='3' name='disk2_size'></td>"
  puts "<td align=right><b>* Device Alias:</b></td><td><input type='text' size='15' name='disk2_deviceAlias'></td>"
  puts "<td align=right><b>* Interface:</b></td><td><input type='text' size='8' name='disk2_deviceInterface'></td>"
  puts "<td align=right><b>Description:</b></td><td><input type='text' size='30' name='disk2_description'></td>"
  puts "</tr>"
end

puts "</table>"


puts "<br><font size='+1'><b>NICs:</b></font>"

puts "<table>"

#nic1
if nic1_entry.to_a.any? then
  puts "<tr>"
  puts "<td align=left><b>1)&nbsp;&nbsp;</b></td>"
  puts "<td>"+nic1_entry['cn'].to_s+" :</td>"
  puts "<p><input type='hidden' name='nic1_cn' value='"+nic1_entry['cn'].to_s+"'>"
  puts "<td align=right><b>* IP Address:</b></td>"
  puts "<td><input type='text' size='16' name='nic1_ifcfgipaddress' value='"+nic1_entry['ifcfgipaddress'].to_s+"'></td>"
  puts "<td align=right><b>* Netmask:</b></td>"
  puts "<td><input type='text' size='16' name='nic1_ifcfgnetmask' value='"+nic1_entry['ifcfgnetmask'].to_s+"'></td>"
  puts "<td align=right><b>* Gateway:</b></td>"
  puts "<td><input type='text' size='16' name='nic1_ifcfggateway' value='"+nic1_entry['ifcfggateway'].to_s+"'></td>"
  puts "<td align=right><b>* onBoot:</b></td>"
  if nic1_entry['ifcfgOnboot'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic1_ifcfgonboot' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic1_ifcfgonboot' value='"+nic1_entry['ifcfgonboot'].to_s+"'></td>"
  end
  puts "</tr>"

  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>* IF Type:</b></td>"
  puts "<td><input type='text' size='10' name='nic1_ifcfgtype' value='"+nic1_entry['ifcfgtype'].to_s+"'></td>"
  puts "<td align=right><b>mac Address:</b></td>"
  puts "<td><input type='text' size='17' name='nic1_ifcfghwaddr' value='"+nic1_entry['ifcfghwaddr'].to_s+"'></td>"
  puts "<td align=right><b>Boot Proto:</b></td>"
  puts "<td><input type='text' size='8' name='nic1_ifcfgbootproto' value='"+nic1_entry['ifcfgbootproto'].to_s+"'></td>"
  puts "<td align=right><b>pxeBoot:</b></td>"
  if nic1_entry['pxeBoot'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic1_pxeBoot' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic1_pxeBoot' value='"+nic1_entry['pxeBoot'].to_s+"'></td>"
  end
  puts "</tr>"

  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>vLAN:</b></td>"
  if nic1_entry['ifcfgvlan'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic1_ifcfgvlan' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic1_ifcfgvlan' value='"+nic1_entry['ifcfgvlan'].to_s+"'></td>"
  end
  puts "<td align=right><b>Bridge:</b></td>"
  puts "<td><input type='text' size='10' name='nic1_ifcfgbridge' value='"+nic1_entry['ifcfgbridge'].to_s+"'></td>"
  puts "<td align=right><b>Master:</b></td>"
  puts "<td><input type='text' size='5' name='nic1_ifcfgmaster' value='"+nic1_entry['ifcfgmaster'].to_s+"'></td>"
  puts "<td align=right><b>Slave:</b></td>"
  if nic1_entry['ifcfgslave'].to_s == "TRUE" then
    puts "    <td><input type='checkbox' name='nic1_ifcfgslave' value='TRUE' checked></td>"
  else
    puts "    <td><input type='checkbox' name='nic1_ifcfgslave' value='"+nic1_entry['ifcfgslave'].to_s+"'></td>"
  end
  puts "</tr>"

  puts "<tr>"
  puts "<td></td><td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>"
  puts "<td align=right><b>EthTool Opts:</b></td>"
  puts "<td><input type='text' size='10' name='nic1_ifcfgethtoolopts' value='"+nic1_entry['ifcfgethtoolopts'].to_s+"'></td>"
  puts "<td align=right><b>Bond Opts:</b></td>"
  puts "<td><input type='text' size='10' name='nic1_ifcfgbondingopts' value='"+nic1_entry['ifcfgbondingopts'].to_s+"'></td>"
